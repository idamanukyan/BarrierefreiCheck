# =============================================================================
# AccessibilityChecker - Environment Variables
# =============================================================================
# Copy this file to .env and update with your values

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------------------------------------
POSTGRES_USER=accesscheck
POSTGRES_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql://accesscheck:your_secure_password_here@localhost:5432/accessibilitychecker

# -----------------------------------------------------------------------------
# Redis
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379

# -----------------------------------------------------------------------------
# MinIO / S3 Object Storage
# SECURITY: Change default credentials before deploying to production!
# -----------------------------------------------------------------------------
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=CHANGE_ME_secure_minio_password
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=CHANGE_ME_minio_access_key
S3_SECRET_KEY=CHANGE_ME_minio_secret_key
S3_BUCKET_SCREENSHOTS=screenshots
S3_BUCKET_REPORTS=reports

# -----------------------------------------------------------------------------
# JWT Authentication
# SECURITY: JWT_SECRET must be at least 32 characters and kept secret!
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
# -----------------------------------------------------------------------------
JWT_SECRET=CHANGE_ME_generate_a_secure_random_string_at_least_32_chars
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# -----------------------------------------------------------------------------
# Stripe (Payments)
# -----------------------------------------------------------------------------
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PRICE_STARTER=price_...
STRIPE_PRICE_PROFESSIONAL=price_...
STRIPE_PRICE_AGENCY=price_...

# -----------------------------------------------------------------------------
# Email (Mailgun/SMTP)
# -----------------------------------------------------------------------------
MAIL_SERVER=smtp.mailgun.org
MAIL_PORT=587
MAIL_USERNAME=postmaster@mg.yourdomain.de
MAIL_PASSWORD=your_mailgun_password
MAIL_FROM=noreply@accessibilitychecker.de
MAIL_FROM_NAME=AccessibilityChecker

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_NAME=AccessibilityChecker
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:3000
API_URL=http://localhost:8000
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# -----------------------------------------------------------------------------
# Scan Settings
# -----------------------------------------------------------------------------
MAX_CONCURRENT_SCANS=10
SCAN_TIMEOUT_SECONDS=300
DEFAULT_CRAWL_LIMIT=100
MAX_CRAWL_LIMIT=1000

# -----------------------------------------------------------------------------
# Sentry (Error Tracking) - Optional
# -----------------------------------------------------------------------------
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# -----------------------------------------------------------------------------
# Analytics - Optional (use privacy-friendly options)
# -----------------------------------------------------------------------------
PLAUSIBLE_DOMAIN=
PLAUSIBLE_API_KEY=
