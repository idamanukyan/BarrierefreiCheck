# =============================================================================
# AccessibilityChecker - Environment Variables
# =============================================================================
# Copy this file to .env and update with your values.
#
# SECURITY NOTES:
# - Never commit .env files to version control
# - Use strong, unique passwords for all services in production
# - Rotate secrets regularly (especially JWT_SECRET)
# - See SECURITY.md for security best practices
#
# QUICK START:
# 1. cp .env.example .env
# 2. Update all values marked with CHANGE_ME
# 3. Generate secure secrets using the commands provided
# =============================================================================

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_NAME=AccessibilityChecker
# Environment: development, staging, production
# IMPORTANT: Set to "production" in production - this enables security validations
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:3000
API_URL=http://localhost:8000

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------------------------------------
POSTGRES_USER=accesscheck
# SECURITY: Use a strong password in production
POSTGRES_PASSWORD=CHANGE_ME_your_secure_password_here
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgresql://accesscheck:CHANGE_ME_your_secure_password_here@localhost:5432/accessibilitychecker

# -----------------------------------------------------------------------------
# Redis (Cache & Job Queue)
# -----------------------------------------------------------------------------
# Format: redis://[:password@]host:port[/database]
REDIS_URL=redis://localhost:6379

# -----------------------------------------------------------------------------
# MinIO / S3 Object Storage
# SECURITY: Change default credentials before deploying to production!
# -----------------------------------------------------------------------------
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=CHANGE_ME_secure_minio_password
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=CHANGE_ME_minio_access_key
S3_SECRET_KEY=CHANGE_ME_minio_secret_key
S3_BUCKET_SCREENSHOTS=screenshots
S3_BUCKET_REPORTS=reports

# -----------------------------------------------------------------------------
# JWT Authentication
# SECURITY: JWT_SECRET must be at least 32 characters and kept secret!
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
# -----------------------------------------------------------------------------
JWT_SECRET=CHANGE_ME_generate_a_secure_random_string_at_least_32_chars
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# -----------------------------------------------------------------------------
# Security Settings
# -----------------------------------------------------------------------------
# CORS: Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Trusted Proxies: CIDR notation, comma-separated
# Only trust X-Forwarded-For headers from these networks
# Example for common setups:
#   - Docker: 172.16.0.0/12
#   - Kubernetes: 10.0.0.0/8
#   - Cloudflare: See https://www.cloudflare.com/ips/
TRUSTED_PROXIES=

# -----------------------------------------------------------------------------
# Stripe (Payments)
# Get keys from: https://dashboard.stripe.com/apikeys
# -----------------------------------------------------------------------------
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
# Webhook secret from: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_...
# Price IDs from: https://dashboard.stripe.com/products
STRIPE_PRICE_STARTER=price_...
STRIPE_PRICE_PROFESSIONAL=price_...
STRIPE_PRICE_AGENCY=price_...

# -----------------------------------------------------------------------------
# Email (SMTP)
# Set EMAIL_ENABLED=false to disable email sending in development
# -----------------------------------------------------------------------------
EMAIL_ENABLED=true
SMTP_HOST=smtp.mailgun.org
SMTP_PORT=587
SMTP_USER=postmaster@mg.yourdomain.de
SMTP_PASSWORD=CHANGE_ME_your_smtp_password
FROM_EMAIL=noreply@accessibilitychecker.de
FROM_NAME=AccessibilityChecker
# Frontend URL for email links (password reset, verification)
FRONTEND_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# Scan Settings
# -----------------------------------------------------------------------------
MAX_CONCURRENT_SCANS=10
SCAN_TIMEOUT_SECONDS=300
DEFAULT_CRAWL_LIMIT=100
MAX_CRAWL_LIMIT=1000

# -----------------------------------------------------------------------------
# Frontend (Vite)
# These are used by the React frontend
# -----------------------------------------------------------------------------
VITE_API_URL=http://localhost:8000/api/v1

# -----------------------------------------------------------------------------
# Sentry (Error Tracking) - Optional
# Get DSN from: https://sentry.io/settings/
# -----------------------------------------------------------------------------
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# -----------------------------------------------------------------------------
# Analytics - Optional (use privacy-friendly options)
# -----------------------------------------------------------------------------
PLAUSIBLE_DOMAIN=
PLAUSIBLE_API_KEY=
